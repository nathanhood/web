extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href='/confirmation') WEB: Where Education Begins
              .float
                //- .name.navbar-brand #{course.title}
                a.logout.btn.btn-danger(href='/logout') Log Out
          .navbar-collapse.collapse

  .courseinfo
    h2= course.title
    img.courseimage(src='/img/#{course.image}')

  .add-stage
    h2 Add Stage
    form(method='GET', action='/teacher/#{course._id}/content')
      input.form-control.title(type='text', name='title', placeholder='title')
      button.btn.btn-info#add-stage Add

  .stages
    each content in contents
      h2= content.title
      button.btn.btn-info.edit-content(data-contentId='#{content._id}') Edit Content
      button.btn.btn-info.edit-test(data-contentId='#{content._id}') Create/Edit Test

block scripts
  script(src='/js/es6/compiled/course.js')
  script(src='/js/es6/compiled/content.js')
