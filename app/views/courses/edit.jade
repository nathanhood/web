extends ../shared/template

block content
  h1 WEB: Course Creation/Edit
  h2= course.title
  img(src='/img/#{course.image}')

  .add-stage
    h2 Add Stage
    form(method='GET', action='/teacher/#{course._id}/content')
      input.title(type='text', name='title', placeholder='title')
      button#add-stage Add


  .stages
    each content in contents
      h2= content.title
      button.edit-content(data-contentId='#{content._id}') Edit Content
      button.edit-test(data-contentId='#{content._id}') Create/Edit Test

block scripts
  script(src='/js/es6/compiled/course.js')
  script(src='/js/es6/compiled/content.js')
