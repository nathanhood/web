extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .nav-bar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .navbar-brand WEB: Course
        .float
          button.logout.btn.btn-danger.login Log Out
        .navbar-collapse.collapse

  .index
    h1= course.title
    img(src='/img/#{course.image}')
    each title in course.contentTitles
      .stage
        h3= title
          a(href='/users/#{course.userName}/#{course._id}/#{title}')
        a.btn.btn-info(href='/users/#{course.userName}/#{course._id}/#{title}/quiz') Quiz
