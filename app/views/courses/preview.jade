  .row
    .col-md-2.col-xs-6
      .thumbnail
        img.courseimage(src='/img/#{course.image}', data-src='holder.js/300x200', alt='...')
        .caption
          h2= course.title
          h3 Stages
            each contentTitle in course.contentTitles
              h4.contentTitle= contentTitle
          button.btn.btn-info#take-course(data-courseid='#{course._id}') Take Course

