extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href='/confirmation') WEB: Where Education Begins
              .float
                a.logout.btn.btn-danger(href='/logout') Log Out
          .navbar-collapse.collapse

  .courseinfo
    a.btn.btn-info#take-course(href='/users/#{course.userName}/#{course._id}') Take Course
    h2= course.title
    .summary= course.summary
    img.courseimage(src='/img/#{course.image}')


  .authorinfo
    h2#username By #{course.userName}

  .stages
    each contentTitle in course.contentTitles
      h2= contentTitle



block scripts
  script(src='/js/es6/compiled/course.js')
  script(src='/js/es6/compiled/content.js')
