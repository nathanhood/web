extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              .navbar-brand WEB: Course Preview
              .float
                .name.navbar-brand #{course.title}
                button.logout.btn.btn-danger.login Log Out
          .navbar-collapse.collapse

  .courseinfo
    button.btn.btn-info#take-course(data-courseid='#{course._id}') Take Course
    h2= course.title
    img.courseimage(src='/img/#{course.image}')


  .authorinfo
    h2= course.userName

  .stages
    each contentTitle in course.contentTitles
      h2= contentTitle

block scripts
  script(src='/js/es6/compiled/course.js')
  script(src='/js/es6/compiled/content.js')
