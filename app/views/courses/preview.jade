extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              .navbar-brand WEB: Course Preview
              .float
                .name.navbar-brand #{course.title}
                .name.navbar-brand #{course.userName}
                button.logout.btn.btn-danger.login Log Out
          .navbar-collapse.collapse

  //- .authorinfo
