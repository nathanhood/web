extends ../shared/template

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href='/confirmation') WEB: Where Education Begins
              .float
                .name.navbar-brand
                a.logout.btn.btn-danger(href='/logout') Log Out
          .navbar-collapse.collapse

  .content
    .reference-links
      if(content.links)
        each link in content.links
          a.ref(href='http://#{link.url}', data-txt='#{link.text}')
    .quill!= content.bodyText
    .videos
      if(content.videos)
        each video in content.videos
          .video(data-path='#{video}')



block scripts
  script(src='/js/es6/compiled/content.js')
