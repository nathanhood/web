extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              .navbar-brand WEB: Create Test
              .float
                .name.navbar-brand #{content.title} Test
                button.logout.btn.btn-danger.login Log Out
          .navbar-collapse.collapse

  .test
    h1(data-courseId='#{courseId}') #{content.title} Test

    button.btn.btn-info#create-test Finished
    button.btn.btn-info#add-question Add Question
    .questions
      form
        .question-shell
          .question
            input.form-control.question(type='text', name='question', placeholder='Write Question')
            input.form-control.possible-answer(type='text', name='possible', placeholder='Possible Answer')
            button.btn.btn-info.add-possible Add Possible Answer
            select.answer(name='answer')
              option Correct Answer

block scripts
  script(src='/js/es6/compiled/test.js')
