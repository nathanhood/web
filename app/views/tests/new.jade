extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .nav-bar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              .navbar-brand WEB: Create Test
              .float
                .name.navbar-brand #{content.title} Test
                button.logout.btn.btn-danger.login Log Out
          .navbar-collapse.collapse

  .test
    h1#contentId(data-contentid='#{content._id}') #{content.title} Test

    button#create-test.btn.btn-success Finished
    button#add-question.btn.btn-warning Add Question
    .questions
      form
        .question-shell
          .question
            input.form-control.question(type='text', name='question', placeholder='Write Question')
          .answer-box
            input.form-control.possible-answer(type='text', name='possible', placeholder='Possible Answer')
            input.form-control.possible-answer(type='text', name='possible', placeholder='Possible Answer')
            input.form-control.possible-answer(type='text', name='possible', placeholder='Possible Answer')
            input.form-control.possible-answer(type='text', name='possible', placeholder='Possible Answer')
        .
        button.btn-info.add-possible Add Possible Answers
        select.answer(name='answer')
          option Correct Answer

block scripts
  script(src='/js/es6/compiled/test.js')
