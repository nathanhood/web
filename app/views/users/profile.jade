extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .nav-bar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        //- .navbar-form.navbar-left.studentsearch(role='search')
        //-   input.search.form-group(type='text', class='form-control', placeholder='Search')
        //-   button.searchbutton.btn.btn-default Search
        .navbar-brand WEB: Profile
        .float
          .name.navbar-brand Welcome, #{user.firstName} #{user.lastName}
          img.smallpicture(src="/img/#{user._id}/#{user.picture}")
          button.logout.btn.btn-danger.login Log Out
      .navbar-collapse.collapse

  img.picture(src="/img/#{user._id}/#{user.picture}")
  .userprofile
    .name <strong>Name: </strong> #{user.firstName} #{user.lastName}
    .email <strong>Email: </strong> #{user.email}
    .qualifications <strong>Qualifications: </strong> #{user.qualifications}
    .bio <strong>Bio: </strong> #{user.bio}
    .interests <strong>Interests: </strong> #{user.interests}

  .courses <strong>Courses: </strong>
    each course in courses
      .title <u>#{course.title}</u>
      .summary #{course.summary}
