extends ../shared/template

block content

  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .nav-bar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        //- .navbar-form.navbar-left.studentsearch(role='search')
        //-   input.search.form-group(type='text', class='form-control', placeholder='Search')
        //-   button.searchbutton.btn.btn-default Search
        .navbar-brand WEB: Student
        .float
          .name.navbar-brand Welcome, #{user.firstName} #{user.lastName}
          img.smallpicture(src="/img/#{user._id}/#{user.image}")
          button.logout.btn.btn-danger.login Log Out
      .navbar-collapse.collapse

  .profile

  .container
    .row
      .col-md-6
        h2 Current Courses
      .col-md-6
        h2 Progress
    .row
      .col-md-1
        h2.courseheading Courses
    .row
      each course in courses
        .col-md-2#course-group
          a(href='#').course-title= course.title
          .course-username By: #{course.userName}
          a(href='#')
            img.course-image(src='/img/#{course.image}')

