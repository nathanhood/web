extends ../shared/template

block content
  h1 WEB: Teacher

  .profile
      .name #{user.firstName} #{user.lastName}
      .email #{user.email}
      .age #{user.age}

  #create-course
    h2 Create Course
    form(action='/courses/create', method='POST')
      input(type='text', name='title', placeholder='Course Title', required)
      input(type='text', name='summary', placeholder='Brief Summary', required)
      button#new-course Begin!

    h2 Courses
