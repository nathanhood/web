extends ../shared/template

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .nav-bar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') WEB: Where Education Begins
      .navbar-collapse.collapse
          .float
            .name.navbar-brand Welcome, #{user.firstName} #{user.lastName}
            a.logout.btn.btn-dangera(href='/logout') Log Out

          .navbar-collapse.collapse

  .welcome-box
    h1.welcome Welcome to <span class='welcome--page-title'>WEB</span>

  .web-pic-box
    img(src='/img/web.svg')

  .confirmation
    .main-navigation
      h2.learn Learn
        a(href='/learn')
      h2.teach Teach
        a(href='/teach')
